<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group9.softwareengineering">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewJobActivity"
            android:label="@string/title_activity_new_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StarredJobActivity"
            android:label="@string/title_activity_starred_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpcomingJobActivity"
            android:label="@string/title_activity_upcoming_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PostedJobActivity"
            android:label="@string/title_activity_posted_job"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotificationActivity"
            android:label="@string/title_activity_notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditUserProfileActivity"
            android:label="@string/title_activity_edit_user_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>